<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:circularflow_radiusInDP="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/caretailpr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="55dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="15dp">

        <ImageView
            android:id="@+id/productImageDetail"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/productNameDetail"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/caretailpr"
        android:layout_alignStart="@+id/caretailpr"
        android:layout_marginStart="36dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="16dp"
        android:text="Tên sản phẩm"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/productDescriptionDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/caretailpr"
        android:layout_marginStart="22dp"
        android:layout_marginTop="97dp"
        android:layout_marginBottom="16dp"
        android:layout_toEndOf="@+id/productDescriptionDetail2"
        android:text="Mô tả sản phẩm" />

    <TextView
        android:id="@+id/productDescriptionDetail2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/caretailpr"
        android:layout_alignStart="@+id/caretailpr"
        android:layout_marginStart="36dp"
        android:layout_marginTop="97dp"
        android:layout_marginBottom="16dp"
        android:text="Mô tả: " />

    <TextView
        android:id="@+id/oldPriceDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/caretailpr"
        android:layout_marginStart="3dp"
        android:layout_marginTop="151dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_toEndOf="@+id/oldPriceDetail2"
        android:text="Giá cũ" />

    <TextView
        android:id="@+id/oldPriceDetail2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/caretailpr"
        android:layout_alignStart="@+id/caretailpr"
        android:layout_marginStart="36dp"
        android:layout_marginTop="151dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Giá cũ: " />

    <TextView
        android:id="@+id/newPriceDetail3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/caretailpr"
        android:layout_alignStart="@+id/caretailpr"
        android:layout_marginStart="36dp"
        android:layout_marginTop="202dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Giá mới:" />

    <TextView
        android:id="@+id/newPriceDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/caretailpr"
        android:layout_marginStart="0dp"
        android:layout_marginTop="203dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_toEndOf="@+id/newPriceDetail3"
        android:text="Giá mới" />

    <TextView
        android:id="@+id/quantityDetail3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/caretailpr"
        android:layout_alignStart="@+id/caretailpr"
        android:layout_marginStart="36dp"
        android:layout_marginTop="249dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Số lượng:" />

    <TextView
        android:id="@+id/quantityDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/caretailpr"
        android:layout_alignStart="@+id/caretailpr"
        android:layout_marginStart="102dp"
        android:layout_marginTop="249dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Số lượng" />

    <ImageButton
        android:id="@+id/closeButtonPrDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_clear_black_24dp" />

</RelativeLayout>
