<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    app:cardCornerRadius="6dp"
    android:id="@+id/card_merchant">

    <RelativeLayout
        android:id="@+id/layoutCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_merchant"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/img_shop_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="start|top"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:src="@drawable/green_shape" />

        <TextView
            android:id="@+id/tv_name_merchant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_merchant"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_address_merchant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name_merchant"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/app_name"
            android:textColor="@color/blueClicked"
            android:textSize="14sp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
