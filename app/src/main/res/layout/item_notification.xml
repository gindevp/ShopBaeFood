<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="8dp"
    android:backgroundTint="#C6D7E7F4"
    android:elevation="4dp"
    app:cardBackgroundColor="#D7E7F4"
    app:cardCornerRadius="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp">

        <!-- Ảnh sản phẩm (chiếm 1/3 phía bên trái) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/layout_item_pro"
            android:layout_width="77dp"
            android:layout_height="77dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="0dp"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="true">

            <ImageView
                android:id="@+id/image_product_order_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/user" />
        </androidx.cardview.widget.CardView>

        <!-- Tên sản phẩm -->

        <!-- Giá mới -->

        <!-- Giá cũ (bị gạch ngang) -->

        <!-- Nút thêm (dấu cộng) phía bên phải -->

        <TextView
            android:id="@+id/product_name_order_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@id/layout_item_pro"
            android:text="Tên thông báo"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/product_price_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_name_order_detail"
            android:layout_marginStart="26dp"
            android:layout_marginTop="11dp"
            android:layout_toEndOf="@id/layout_item_pro"
            android:text="Nội dung thông báo"
            android:textColor="#00C853"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/product_price_old2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_name_order_detail"
            android:layout_marginStart="24dp"
            android:layout_marginTop="36dp"
            android:layout_toEndOf="@+id/layout_item_pro"
            android:text="Thời gian bao lâu trước"
            android:textColor="#C56767"
            android:textSize="16sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
