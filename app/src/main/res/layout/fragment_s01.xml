<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".OrderManagementActivity">

    <!-- Thanh tiêu đề -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quản Lý Đơn Hàng"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <!-- Thanh trạng thái -->
    <com.google.android.material.button.MaterialButtonToggleGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:singleSelection="true"
        app:checkedButton="@+id/status1">

        <!-- Trạng thái 1 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/status1"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Trạng Thái 1" />

        <!-- Trạng thái 2 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/status2"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Trạng Thái 2" />

        <!-- Trạng thái 3 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/status3"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Trạng Thái 3" />

        <!-- Trạng thái 4 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/status4"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Trạng Thái 4" />

    </com.google.android.material.button.MaterialButtonToggleGroup>

    <!-- Dưới đây, bạn có thể hiển thị danh sách các đơn hàng dựa vào trạng thái đã chọn -->

</LinearLayout>
